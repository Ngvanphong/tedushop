
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

@section JavaScriptLayout {
    <script src="/Assets/client/js/jquery.cookie.js"></script>
    <script src="/Assets/client/js/waypoints.min.js"></script>
    <script src="/Assets/client/js/modernizr.js"></script>
    <script src="/Assets/client/js/bootstrap-hover-dropdown.js"></script>
    <script src="/Assets/client/js/owl.carousel.min.js"></script>
    <script src="/Assets/client/js/front.js"></script>
    <script src="~/Assets/client/js/shoppingCart.js"></script>
}

<div id="all">

    <div id="content">
        <div class="container">

            <div class="col-md-12">

                <ul class="breadcrumb">
                    <li>
                        <a href="index.html">Home</a>
                    </li>

                    <li>Giỏ hàng</li>

                </ul>

            </div>


            <div class="col-md-12" id="customer-order">
                <div class="box">
                    <h1>Giỏ hàng</h1>
                    <hr>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th colspan="2">Sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Giá</th>
                                    <th>Giá khuyến mãi</th>
                                    <th>Tổng tiền</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody id="shopingContent"></tbody>
                        </table>

                    </div>
                    <!-- /.table-responsive -->
                    <div class="box-footer">
                        <div class="pull-left">
                            <a href="category.html" class="btn btn-default"><i class="fa fa-chevron-left"></i>Tiếp tục mua</a>
                        </div>
                        <div class="pull-right">
                            <button class="btn btn-default"><i class="fa fa-refresh"></i> Cập nhật giỏ hàng</button>
                            <button type="submit" class="btn btn-primary">
                                Thanh toán <i class="fa fa-chevron-right"></i>
                            </button>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <!-- /.container -->
    </div>

    <script id="tmpShoppingContent" type="x-tmpl-mustache">
        <tr>
            <td>
                <img src="{{Image}}" alt="{{Name}}">
            </td>
            <td>
                {{Name}}
            </td>
            <td><input type="number" data-id="{{ProductId}}" value="{{Quantity}}" class="form-control" /></td>
            <td>{{Price}}</td>
            <td>{{PromotionPrice}}</td>
            <td>{{Amount}}</td>
            <td><button type="submit" class="btn btn-danger"><i class="fa fa-trash-o"></i></button></td>
        </tr>
    </script>


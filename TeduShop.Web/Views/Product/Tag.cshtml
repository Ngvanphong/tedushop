
@model TeduShop.Web.Infrastructure.Core.PaginationClient<TeduShop.Web.Models.ProductViewModel>

@{
    ViewBag.Title = "Tag";
    Layout = "~/Views/Shared/Layouts.cshtml";
    var ProductTag = (TeduShop.Web.Models.TagViewModel)ViewBag.ProductTag;
}
@section JavaScriptLayout {
    <script src="/Assets/client/js/jquery.cookie.js"></script>
    <script src="/Assets/client/js/waypoints.min.js"></script>
    <script src="/Assets/client/js/modernizr.js"></script>
    <script src="/Assets/client/js/bootstrap-hover-dropdown.js"></script>
    <script src="/Assets/client/js/owl.carousel.min.js"></script>
    <script src="/Assets/client/js/front.js"></script>

}
<div id="all">
    <div id="content">
        <div class="container">

            <div class="col-md-12">

                <ul class="breadcrumb">
                    <li>
                        <a href="/index.html">Home</a>
                    </li>
                    <li>@ProductTag.Name</li>
                </ul>


                <div id="productSort" class="row products">
                    @if (@Model.Count > 0)
                    {
                        foreach (var item in Model.Items)
                        {
                            var url = "/" + item.Alias + ".p-" + item.ID + ".html";
                            <div class="col-md-3 col-sm-4">
                                <div class="product">
                                    <div class="flip-container">
                                        <div class="flipper">
                                            <div class="front">
                                                <a href="@url">
                                                    <img src="@item.ThumbnailImage" alt="@item.Name" class="img-responsive">
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <a href="@url" class="invisible">
                                        <img src="@item.ThumbnailImage" alt="" class="img-responsive">
                                    </a>
                                    <div class="text">
                                        <h3><a href="@url">@item.Name</a></h3>
                                        @if (item.PromotionPrice.HasValue == true)
                                        {
                                            <p class="price"><del>@item.Price</del>@item.PromotionPrice</p>
                                        }
                                        else
                                        {
                                            <p class="price">@item.Price</p>
                                        }

                                        <p class="buttons">
                                            <a href="@url" class="btn btn-default">Chi tiết</a>
                                            <a href="basket.html" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>Mua</a>
                                        </p>
                                    </div>
                                    <!-- /.text -->
                                    @if (item.PromotionPrice.HasValue == true)
                                    {
                                        <div class="ribbon sale">
                                            <div class="theribbon">SALE</div>
                                            <div class="ribbon-background"></div>
                                        </div>
                                    }

                                    <!-- /.ribbon -->

                                </div>
                                <!-- /.product -->
                            </div>
                        }

                    }
                    else
                    {
                        <div class="text-center"><h3>Không có sản phẩm</h3></div>;

                    }


                </div>
                <!-- /.products -->
                @if (Model.TotalPage > 1)
                {
                    var startPageIndex = Math.Max(1, Model.PageIndex - Model.PageDisplay / 2);
                    var endPageIndex = Math.Min(Model.TotalPage, Model.PageIndex + Model.PageDisplay / 2);
                    <div class="pages">

                        <ul class="pagination">
                            @if (Model.PageIndex > 1)
                            {
                                <li>
                                    <a href="?page=@(Model.PageIndex - 1)">&laquo;</a>
                                </li>
                            }

                            @for (int i = startPageIndex; i <= endPageIndex; i++)
                            {
                                if (i == Model.PageIndex)
                                {
                                    <li class="active">
                                        <a href="?page=@i">@i</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a href="?page=@i">@i</a>
                                    </li>
                                }

                            }

                            @if (Model.PageIndex < Model.TotalPage)
                            {
                                <li>
                                    <a href="?page=@(Model.PageIndex + 1)">&raquo;</a>
                                </li>
                            }

                        </ul>
                    </div>

                }



            </div>
            <!-- /.col-md-9 -->

        </div>
        <!-- /.container -->
    </div>
    <!-- /#content -->





